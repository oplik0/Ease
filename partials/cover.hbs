<div class="site-cover u-overlay">
    {{#if @site.cover_image}}
        <img class="cover-image lazyload jarallax-img u-object-fit"
            data-src="{{img_url @site.cover_image}}"
            src="data:image/gif;base64,R0lGODlhAQABAAAAACH5BAEKAAEALAAAAAABAAEAAAICTAEAOw=="
            alt="{{@site.title}}">
    {{else}}
        <img class="cover-image jarallax-img u-object-fit"
        src="data:image/gif;base64,"
        alt="{{@site.title}}">
    {{/if}}
    <div class="cover-content">
        {{#if @site.description}}
            <div class="cover-description">{{@site.description}}</div>
        {{/if}}
        {{> search}}
    </div>
</div>
